{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "types": ["bun-types", "reflect-metadata"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "lib": ["es2022", "dom"]

    // "experimentalDecorators": true,
    // "emitDecoratorMetadata": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*", "test/**/*"]
}
