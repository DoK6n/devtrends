{
  "name": "devtrends",
  "version": "0.0.1",
  "module": "src/index.js",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "predev": "bun run format & bun run lint",
    "dev": "bun run --watch src/index.ts | pino-pretty",
    "test": "bun test --watch --test-name-pattern *.spec.ts"
  },
  "dependencies": {
    "@elysiajs/cors": "^0.7.0",
    "@elysiajs/swagger": "^0.7.2",
    "dayjs": "^1.11.10",
    "elysia": "latest",
    "pino": "^8.15.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "bun-types": "latest",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "pino-pretty": "^10.2.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  }
}
